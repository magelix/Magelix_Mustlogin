<?xml version="1.0"?>
<config>
    <modules>
        <Magelix_Mustlogin>
            <version>0.1.0</version>
        </Magelix_Mustlogin>
    </modules>
    <global>
        <models>
            <magelix_mustlogin>
                <class>Magelix_Mustlogin_Model</class>
                <resourceModel>magelix_mustlogin_resource</resourceModel>
            </magelix_mustlogin>
            <magelix_mustlogin_resource>
                <class>Magelix_Mustlogin_Model_Resource</class>
            </magelix_mustlogin_resource>
        </models>
        <blocks>
            <magelix_mustlogin>
                <class>Magelix_Mustlogin_Block</class>
            </magelix_mustlogin>
            <page>
                <rewrite>
                    <html_head>Magelix_Mustlogin_Block_Html_Head</html_head>
                </rewrite>
            </page>
        </blocks>
        <helpers>
            <magelix_mustlogin>
                <class>Magelix_Mustlogin_Helper</class>
            </magelix_mustlogin>
        </helpers>
    </global>
    <default>
        <customer>
            <must_login>
                <is_mustlogin_active>0</is_mustlogin_active>
                <is_redirect_login>1</is_redirect_login>
                <redirect_page>home</redirect_page>
            </must_login>
        </customer>
    </default>
</config>